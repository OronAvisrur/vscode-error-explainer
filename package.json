{
  "name": "error-explainer",
  "displayName": "Error Explainer",
  "description": "AI-powered terminal error explanations",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "error-explainer.explainError",
        "title": "Explain Terminal Error"
      }
    ],
    "configuration": {
      "title": "Error Explainer",
      "properties": {
        "errorExplainer.provider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "ollama",
            "custom"
          ],
          "default": "openai",
          "description": "LLM provider to use for error explanations",
          "enumDescriptions": [
            "OpenAI (GPT-4, GPT-3.5)",
            "Anthropic (Claude)",
            "Ollama (Local models)",
            "Custom endpoint"
          ]
        },
        "errorExplainer.model": {
          "type": "string",
          "default": "",
          "description": "Model name (e.g., gpt-4, claude-3-sonnet-20240229, llama2). Leave empty for provider default."
        },
        "errorExplainer.customEndpoint": {
          "type": "string",
          "default": "",
          "description": "Custom API endpoint URL (required when provider is 'custom')"
        },
        "errorExplainer.maxTokens": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 4000,
          "description": "Maximum tokens in LLM response"
        },
        "errorExplainer.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "LLM temperature (0 = deterministic, 2 = creative)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
